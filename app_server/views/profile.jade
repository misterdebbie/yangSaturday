extends test

block content
    .row
        .col-xs-12
            h1= title
            p Welcome to #{title}
    .row
        .col-xs-6
            img.img-responsive(src='/images/lalaland.jpg')
    .row.page-header
        .col-lg-12
            .row
                .col-xs-12.col-md-6
            .row
                .col-xs-12.col-md-6
                    form.form-horizontal(action='', method='get', role='form')
                        .form-group
                            label.col-xs-10.col-sm-2.control-label(for='name') User ID
                            .col-xs-12.col-sm-8
                                input#name.form-control(name='name')
                        .form-group
                            label.col-xs-10.col-sm-2.control-label(for='password') Password
                            .col-xs-12.col-sm-8
                                input#password.form-control(type='password' name='password')
                        button.btn.btn-default.pull-right  Sign in
                .col-xs-12.col-md-4